<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CCImageStatusBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@color/cc_colorDark</item>
        <item name="android:colorAccent">@color/cc_colorAccent</item>
        <item name="colorPrimary">@color/cc_colorPrimary</item>
        <item name="colorPrimaryDark">@color/cc_colorPrimaryDark</item>
        <item name="colorAccent">@color/cc_colorAccent</item>
        <item name="drawerArrowStyle">@style/CCAppTheme.DrawerArrowToggle</item>
    </style>

    <style name="CCAppTheme.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="CCAppPreferenceTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cc_colorPrimary</item>
        <item name="colorPrimaryDark">@color/cc_colorPrimary</item>
        <item name="colorAccent">@color/cc_colorAccent</item>
        <item name="drawerArrowStyle">@style/CCAppTheme.DrawerArrowToggle</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionBarTheme">@style/CCWhiteToolbar</item>
        <item name="toolbarStyle">@style/CCNoSpaceNavigationToolbar</item>

        <item name="android:actionModeBackground">@color/cc_colorPrimary</item>
    </style>

    <style name="CCWhiteToolbar" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="colorControlHighlight">@android:color/white</item>

        <item name="titleTextColor">@android:color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="CCNoSpaceNavigationToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
</resources>